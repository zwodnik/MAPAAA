<Page
    x:Class="Maps.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Maps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <AppBarButton x:Name="MapLauncher" HorizontalAlignment="Stretch" Icon="Map" Label="Mapa" VerticalAlignment="Stretch" Click="MapLauncher_Click" Height="100" Margin="0,100,0,0" Width="100"/>
        <TextBox x:Name="wsp1_TB" TextWrapping="Wrap" Margin="0,0,300,0" Width="200" Height="50" PlaceholderText="pierwsza współrzędna" TextChanged="wsp1_TB_TextChanged"/>
        <TextBox x:Name="wsp2_TB" TextWrapping="Wrap" Margin="300,0,0,0" Width="200" Height="50" PlaceholderText="druga współrzędna" TextChanged="wsp2_TB_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Pierwsza współrzędna:" VerticalAlignment="Top" Margin="395,319,0,0" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Druga współrzędna:" VerticalAlignment="Top" Margin="722,319,0,0" FontSize="24"/>
    </Grid>
</Page>
